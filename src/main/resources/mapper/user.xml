<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhoubw.mapper.UserMapper">

    <select id="getUserByName" parameterType="string" resultType="UserEntity">
		SELECT id, name, password FROM user
		WHERE name = #{name}
	</select>

    <select id="getRoleByUserId" parameterType="long" resultType="com.zhoubw.Authority.MyGrantedAuthority">
        SELECT role authority FROM role
        WHERE id IN (
          SELECT role FROM user_role WHERE user_id = #{id}
        )
    </select>
</mapper>